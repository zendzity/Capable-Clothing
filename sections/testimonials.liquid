      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "quote",
      "settings": [
        {
        "type": "range",
        "id": "stars",
        "min": 1,
        "max": 5,
        "step": 1,
        "unit": "px",
        "label": "Stars",
        "default": 5
        },
		{
          "type": "richtext",
          "id": "testimonial",
          "default": "<p>Amet minim mollit non deserunt ullamco est sit aliqua dolor do amet sint. Velit officia consequat duis enim velit mollit. Exercitation veniam consequat sunt nostrud amet.</p>",
          "label": "Testimonial"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "author icon"
        },
        {
          "type": "text",
          "id": "title",
          "default": "Annette Black",
          "label": "author name"
       }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonial",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ]
}
